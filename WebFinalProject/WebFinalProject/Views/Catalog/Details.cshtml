<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        @if (File.Exists(Server.MapPath("~/Content/Media/") + Model.Id + "title.png"))
        {
            <dd>
                <img src="~/Content/Media/@(Model.Id + "title.png")" width="1500" height="500" />
            </dd>
        }

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        @if (File.Exists(Server.MapPath("~/Content/Media/") + Model.Id + ".mp4"))
        {
            <dd>
                <video controls="controls" class="game-video">
                    <source src="~/Content/Media/@(Model.Id + ".mp4")" type="video/mp4" />
                    Your browser does not support the video tag.
                </video>
            </dd>
        }

        <dd>
            @Html.DisplayFor(model => model.TotalScore)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
