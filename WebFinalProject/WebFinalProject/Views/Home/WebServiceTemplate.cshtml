<div>
    <ul class="pagination">
        <li><a href="?page=1" rel="first">First</a></li>

        @{
            int i;

            for (i = 0; i < 25; i++)
            {
                if (i + 1 == ViewBag.page)
                {
                    <li class="active">
                        @Ajax.ActionLink((i + 1).ToString(), "Index", new { page = i + 1 }, new AjaxOptions
                                                                    {
                                                                        HttpMethod = "GET",
                                                                        InsertionMode = InsertionMode.Replace,
                                                                        UpdateTargetId = "WebService",
                                                                        OnComplete = "ajax_call()"
                                                                    })
                    </li>
                }
                else
                {
                    <li>
                        @Ajax.ActionLink((i + 1).ToString(), "Index", new { page = i + 1 }, new AjaxOptions
                                                                    {
                                                                        HttpMethod = "GET",
                                                                        InsertionMode = InsertionMode.Replace,
                                                                        UpdateTargetId = "WebService",
                                                                        OnComplete = "ajax_call()"
                                                                    })
                    </li>
                }
            }
        }

        <li><a href="?page=@i" rel="last">Last</a></li>
    </ul>
</div>

