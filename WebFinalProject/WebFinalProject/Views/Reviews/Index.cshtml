@using PagedList.Mvc;
@using PagedList;

@model IPagedList<WebFinalProject.Models.Review>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.0/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.0/js/bootstrap-toggle.min.js"></script>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form method="get" action="@Url.Action("Index")"
      data-otf-ajax="true" data-otf-target="#dynamicContent">

    <label>Filters</label>
    <div class="row filters-catalog">
        <div class="by-name">
            Game Title:
        </div>
        <div class="col-xs-2">
            @Html.TextBox("searchString", "", new { @class = "form-control" })
        </div>

        <div class="by-email">
            Email:
        </div>
        <div class="col-xs-2">
            @Html.TextBox("emailFilter", "", new { @class = "form-control" })
        </div>
        <div class="by-score">
            Score Above:
        </div>
        <div class="col-xs-1">
            <input type="number" name="scoreAbove" min="0" max="100" value="0" class="form-control" />
        </div>

        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            <div>My reviews only:</div>
            <div>
                <input data-toggle="toggle" type="checkbox" name="myReviews" />
            </div>
        }

        <div class="col-xs-1">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>

    </div>

</form>

<br />
<br />

<div id="dynamicContent">
    @Html.Partial("ReviewsTemplate", Model)
</div>


